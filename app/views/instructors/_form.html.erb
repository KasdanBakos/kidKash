<%= simple_form_for(@instructor) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="form-inputs">
      <% if current_user.role?(:admin) %>
        <%= f.input :username, label_html: { class: 'active' } %>
        <%= f.input :first_name, label_html: { class: 'active' } %>
        <%= f.input :last_name, label_html: { class: 'active' } %>
        <%= f.input :bio, label_html: { class: 'active' } %>
        <%= f.input :email, label_html: { class: 'active' } %>
        <%= f.input :phone, label_html: { class: 'active' } %>
        <%= f.file_field :picture, label_html: { class: 'active' } %>
      <% elsif current_user.role?(:instructor) %>
        <%= f.input :email, label_html: { class: 'active' } %>
        <%= f.input :phone, label_html: { class: 'active' } %>
        <%= f.input :bio, label_html: { class: 'active' } %>
        <%= f.input :password, label_html: { class: 'active' } %>
        <%= f.input :password_confirmation, label_html: { class: 'active' } %>
        <%= f.file_field :picture, label_html: { class: 'active' } %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="form-actions col s8">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>






