<h3>Welcome, <%= current_user.instructor.first_name %> <%= current_user.instructor.last_name %> </h3>

<div class="row" id="stat-row">
  <!-- Stats about which camps need an instructor -->
  <div class="col s5">
    <div class="card">
    <div class="card-title"><strong>Number of Students: </strong></div>
      <div class="card-text">
          <%= @number_of_students %>
        </div>
    </div>

    <div class="card">
      <div class="card-text">
          <%= render :partial => "bar_instructor" %>
        </div>
    </div>

  </div>


  <div class="col s7">
    <div class="card">
    <div class="card-title"><strong>Upcoming Camps: </strong></div>
      <% if @upcoming_camps.nil? %>
        <h5>No upcoming camps</h5>
      <% else %>
        <table>
        <thead>
          <tr>
            <th>Camp</th>
            <th>Location</th>
            <th>Start Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @upcoming_camps.each do |camp| %>
            <tr>
              <td><%= link_to camp.curriculum.name, camp %></td>
              <td><%= link_to camp.location.name, camp.location %></td>
              <td><%= camp.start_date.strftime("%m/%d/%y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>


      <% end %>
    </div>
  </div>

</div>


