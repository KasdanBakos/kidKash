<h3>Welcome, <%= current_user.username %> </h3>


<div class="row" id="dash-row">
  <div class="col s2">
    <div class="card">
    <div class="card-title">Number of Camps:</div>
    <div class="card-text">
      <%= @num_camps %>
    </div>
    </div>
    </div>

  <div class="col s2">
    <div class="card">
    <div class="card-title">Number of Curriculums:</div>
    <div class="card-text">
      <%= @num_currs %>
    </div>
    </div>
    </div>

  <div class="col s2">
    <div class="card">
    <div class="card-title">Number of Instructors:</div>
    <div class="card-text">
      <%= @num_instructors %>
    </div>
    </div>
    </div>

  <div class="col s2">
    <div class="card">
    <div class="card-title">Number of Students:</div>
    <div class="card-text">
      <%= @num_students %>
    </div>
    </div>
    </div>

  <div class="col s2">
    <div class="card">
    <div class="card-title">Number of Locations:</div>
    <div class="card-text">
      <%= @num_locations %>
    </div>
    </div>
    </div>

  <div class="col s2">
    <div class="card">
    <div class="card-title">Number of Families:</div>
    <div class="card-text">
      <%= @num_families %>
    </div>
    </div>
    </div>
</div>




<div class="row" id="stat-row">
  <!-- Stats about which camps need an instructor -->
  <div class="col s8">
    <div class="card">
    <div class="card-title"><strong>Number of Camps without an Instructor: <%= @camps_without_instructors_count %></strong></div>
      <% if @camps_without_instructors.empty? %>
        <h5>All camps have instructors!</h5>
      <% else %>
        <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>Time Slot</th>
            <th>Number of Students</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @camps_without_instructors.each do |camp| %>
            <tr>
              <td><%= link_to camp.curriculum.name, camp %></td>
              <td><%= camp.start_date.strftime("%m/%d/%y") %></td>
              <td><%= camp.time_slot == "am" ? "Morning" : "Afternoon" %></td>
              <td><%= camp.registrations.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>


      <% end %>
    </div>
  </div>





  <div class="col s4">
    <div class="card">
      <div class="card-title"><strong>Top 3 Students by Rating</strong></div>
        <% if @top_3_students.empty? %>
        <h5>All camps have instructors!</h5>
      <% else %>
        <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Rating</th>
            <th>Age</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @top_3_students.each do |student| %>
            <tr>
              <td><%= link_to student.name, student %></td>
              <td><%= student.rating %></td>
              <td><%= student.age %></td>
            </tr>
          <% end %>
        </tbody>
      </table>


      <% end %>
      </div>
    </div>
  </div>


</div>


<div class="row">
  <div class="col s6">
    <div class="card">
    <%= render :partial => "pie_chart" %>
    </div>
  </div>


  <div class="col s6">
    <div class="card">
    <%= render :partial => "line_chart" %>
    </div>
  </div>



</div>