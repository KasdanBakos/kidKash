<div class="card ">
  <div class="card-content">
    <span class="card-title"><%= state %></span>
    <% if registrations.empty? %>
    <p>No registrations at this time</p>
    <% else %>
      <table>
        <thead>
          <th>Student</th>
          <th>Camp</th>
          <th>Date</th>
        </thead>
          <% for registration in registrations %>
            <tr>
              <td><%= link_to registration.student.name, student_path(registration.student) %></td>
              <td><%= link_to registration.camp.name, camp_path(registration.camp) %></td>
              <td>&nbsp;<%= registration.camp.start_date.strftime("%m/%d/%y") %></td>
            </tr>
          <% end %>
      </table>
    <% end %>
  </div>
</div>
