<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Description</th>
      <th>Type</th>
      <th>To account</th>
      <th>From account</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.amount %></td>
        <td><%= transaction.description %></td>
        <td><%= transaction.trans_type %></td>
        <td><%= link_to "%s - %s" % [transaction.get_account(transaction.to_account)[0].user.name, transaction.get_account(transaction.to_account)[0].name], transaction.get_account(transaction.to_account) %></td>
        <td><%= link_to "%s - %s" % [transaction.get_account(transaction.from_account)[0].user.name, transaction.get_account(transaction.from_account)[0].name], transaction.get_account(transaction.from_account) %></td>
        <td><%= transaction.date %></td>
        <td><%= link_to 'Show', transaction %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path %>
