<div class="ui grid">
  <div class="twelve wide column">
    <img class="ui centered big image" src="images/Landing.png">
    <h1 class="ui center aligned header">Ask your kids, what's in their wallet?</h1>
  </div>
  <div class="four wide column">
    <div class="ui raised segment">

      <%= form_with url: login_path, :html => {:class => "ui form"},  local: true do |f| %>
        <div class="field">
          <%= f.label :username %>
            <%= f.text_field :username %>
        </div>

        <div class="field">
          <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        
        <div class="actions"><%= f.submit "Log In", class:"ui button" %></div>
      <% end %>
      Not a member? <%= link_to 'Sign up', @users %>  today! 
    </div>
  </div>
</div>
