  <div class="col s12 center">
    <div class="card">

<p id="notice"><%= notice %></p>

<% if @families.empty? %>
  <h3>There are no families in the system at this time</h3>
<% else %>
  <h3>Families</h3>

  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= link_to family.family_name, family %></td>
        <td><%= number_to_phone family.phone %></td>
        <td><%= link_to 'Edit', edit_family_path(family), :class=>"btn waves-effect waves-light blue" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="paginate">
  <%= will_paginate @families, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'page' %>
</span>

    <% end %>
</div>
</div>

  <div class="col s12">
<%= link_to 'New family', new_family_path, class: 'waves-effect waves-light btn' %>
</div>
