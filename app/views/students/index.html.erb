
  <div class="col s12 center">



  <!--  ADMIN -->
<% if (current_user != nil) && (current_user.role == 'admin') %>
  <% if @students.empty? %>
    <h3>There are no students in the system at this time</h3>
  <% else %>
    <h3>Students</h3>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Rating</th>
          <th>Camps</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= link_to student.name, student %></td>
            <td><%= student.rating %></td>
            <td><%= student.camps.size %></td>
            <td><%= link_to 'Edit', edit_student_path(student), :class=>"btn waves-effect waves-light blue" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <span class="paginate">
    <%= will_paginate @students, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'page'%>
  </span>

</div>

<div class="col s12">
  <%= link_to 'New student', new_student_path, class: 'waves-effect waves-light btn' %>
</div>

  <!--  PARENT -->
<% elsif (current_user != nil) && (current_user.role == 'parent')%>

  <div class="col s12 center">
    <div class="card">

  <% if @family_students.empty? %>
    <h3>You have no students in your family</h3>
  <% else %>
    <h3>Students in your family</h3>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Rating</th>
          <th>Camps</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @family_students.each do |student| %>
          <tr>
            <td><%= link_to student.name, student %></td>
            <td><%= student.rating %></td>
            <td><%= student.camps.size %></td>
            <td><%= link_to 'Edit', edit_student_path(student), :class=>"btn waves-effect waves-light blue" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  </div>
</div>
  <%= link_to 'New student', new_student_path(family_id: current_user.family.id), class: 'waves-effect waves-light btn' %>


  <!-- INSTRUCTOR -->
<% elsif (current_user != nil) && (current_user.role == 'instructor')%>
  <div class="col s12 center">
    <div class="card">
<% if @camp_students.empty? %>
  <h3>You have no students in your family</h3>
<% else %>
  <h3>Students in your camps</h3>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Rating</th>
        <th>Camps</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @camp_students.each do |student| %>
        <tr>
          <td><%= link_to student.name, student %></td>
          <td><%= student.rating %></td>
          <td><%= student.camps.size %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<% end %>



<% end %>






