<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="form-inputs">
      <%= f.input :username, label_html: { class: 'active' } %>
      <%= f.input :first_name, label_html: { class: 'active' } %>
      <%= f.input :last_name, label_html: { class: 'active' } %>
      <%= f.input :email, label_html: { class: 'active' } %>
      <%= f.input :password, label_html: { class: 'active' } %>
      <%= f.input :password_confirmation, label_html: { class: 'active' } %>
      <%= f.file_field :photo, label_html: { class: 'active' } %>
      <% if current_user == nil %>
        <%= f.input :role, as: :hidden, input_html: { value: "Parent" } %>
        <%= f.input :relative_id, as: :hidden, input_html: { value: nil } %>
      <% elsif current_user != nil && current_user.role == "Parent" %>
        <%= f.input :role, as: :hidden, input_html: { value: "Child" } %>
        <%= f.input :relative_id, as: :hidden, input_html: { value: current_user.id } %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="form-actions col s8">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>