<p id="notice"><%= notice %></p>
<link href="https://fonts.googleapis.com/css?family=Catamaran|Quicksand&display=swap" rel="stylesheet">
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

# transaction history page
<div>
  <div class="ui two column grid" style="padding: 10px">
    <div class="column">
      <div class="transaction-title">Rich Fairbank | Savings Account</div>
    </div>
    <div class="column" style="text-align: right; padding: 10px">
      <span class="transaction-interest" style="color: black">Current Interest: </span><span class="transaction-interest" style="font-weight: bold">10% </span>
    </div>
  </div>
  <table style="width: 100%; border-collapse: collapse">
  <thead>
    <tr>
      <th class="transaction-header">Date</th>
      <th class="transaction-header">Description</th>
      <th class="transaction-header">Amount</th>
      <th class="transaction-header">Balance</th>
    </tr>
  </thead>
  <tbody>
    # <% @users.each do |user| %>
      <tr>
        <td class="transaction-cell"><%= user.username %></td>
        <td class="transaction-cell"><%= user.first_name %></td>
        <td class="transaction-cell"><%= user.last_name %></td>
        <td class="transaction-cell"><%= user.email %></td>
      </tr>
    # <% end %>
  </tbody>
</table>
</div>

# parent viewing child's account tiles

<div class="accountWrapper">
<div class="ui stackable two column grid">
  <div class="column">
    <div class="ui segment account" style="min-width: 400px">
      <div class="account-wrapper">
        <div class="account-title">Checking Account</div>
        <div style="text-align: center">
          <div class="account-balance">$50.00</div>
          <div class="account-line"></div>
          <button class="account-button" style="color: white; background-color: #06AED5">View Transaction</button>
          <button class="account-button" style="color: #DD1C1A; background-color: #FFDC51">Add $</button>
          <button class="account-button" style="color: #FFDC51; background-color: #DD1C1A">Remove $</button>
        </div>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="ui segment account" style="min-width: 400px">
      <div class="account-wrapper">
        <div class="account-title">Savings Account</div>
        <div style="text-align: center">
          <div class="account-balance">$50.00</div>
          <div class="account-line"></div>
          <button class="account-button" style="color: white; background-color: #06AED5">View Transaction</button>
        </div>
      </div>
    </div>
  </div>
</div>
</div>



