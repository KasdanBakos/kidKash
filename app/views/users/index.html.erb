<p id="notice"><%= notice %></p>
<link href="https://fonts.googleapis.com/css?family=Catamaran|Quicksand&display=swap" rel="stylesheet">
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Photo</th>
      <th>Password digest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.photo %></td>
        <td><%= user.password_digest %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="accountWrapper">
<div class="ui stackable two column grid">
  <div class="column">
    <div class="ui segment account">
      <div class="account-wrapper">
        <div class="account-title">Checking Account</div>
        <div style="text-align: center">
          <div class="account-balance">$50.00</div>
          <div class="account-line"></div>
          <button class="account-button" style="color: white; background-color: #06AED5">View Transaction</button>
          <button class="account-button" style="color: #DD1C1A; background-color: #FFDC51">Add $</button>
          <button class="account-button" style="color: #FFDC51; background-color: #DD1C1A">Remove $</button>
        </div>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="ui segment account">
      <div class="account-wrapper">
        <div class="account-title">Savings Account</div>
        <div style="text-align: center">
          <div class="account-balance">$50.00</div>
          <div class="account-line"></div>
          <button class="account-button" style="color: white; background-color: #06AED5">View Transaction</button>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<%= link_to 'New User', new_user_path %>
