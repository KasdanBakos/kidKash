
  <div class="col s12 center">
    <div class="card">
<p id="notice"><%= notice %></p>

<% if @users.empty? %>
  <h3>There are no users in the system at this time</h3>
<% else %>
  <h3>Users</h3>

  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class=>"btn waves-effect waves-light blue" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="paginate">
  <%= will_paginate @users, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'page' %>
</span>

    <% end %>
</div>
</div>

<div class="col s12">
<%= link_to 'New User', new_user_path, class: 'waves-effect waves-light btn' %>
</div>
